<script>

var $quizForm = $("#quizForm");

      var API = {
    getQuestion: function() {
      return $.ajax({
        url: "api/addquestion",
        type: "GET"
      });
    },
  };

  var refreshQuestions = function() {
  API.getQuestion().then(function(data) {
    var $question = data.map(function(question) {
      var $a = $("<a>")
        .text(question.question)
        .attr("href", "/quiz/" + question.id);

      var $li = $("<li>")
        .attr({
          class: "list-group-item",
          "data-id": question.id
        })
        .append($a);

        return $li;


    });

    $quizForm.empty();
    $quizForm.append($question);
  });
};
